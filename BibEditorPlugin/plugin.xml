   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="edu.uchicago.cs.hao.bibeditor.preferences.BibEditorPreferencePage"
            id="edu.uchicago.cs.hao.bibeditor.preferences.BibEditorPreferencePage"
            name="BibTex Editor">
      </page>
   </extension>
   <extension
