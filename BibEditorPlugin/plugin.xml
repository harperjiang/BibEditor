<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="edu.uchicago.cs.hao.texdojo.bibeditor.editors.BibEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="bib"
            icon="icons/bib_icon.png"
            id="edu.uchicago.cs.hao.texdojo.bibeditor.editors.BibEditor"
            name="BibTex Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="edu.uchicago.cs.hao.texdojo.bibeditor.commands.category"
            name="BibTex Editor Category">
      </category>
      <command
            categoryId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.category"
            id="edu.uchicago.cs.hao.texdojo.bibeditor.commands.addEntryCommand"
            name="&amp;Add Entry">
      </command>
      <command
            categoryId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.category"
            id="edu.uchicago.cs.hao.texdojo.bibeditor.commands.removeEntryCommand"
            name="&amp;Remove Entry">
      </command>
      <command
            categoryId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.category"
            id="edu.uchicago.cs.hao.texdojo.bibeditor.commands.copyCiteCommand"
            name="&amp;Copy Cite Command">
      </command>
      <command
            categoryId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.category"
            id="edu.uchicago.cs.hao.texdojo.bibeditor.commands.searchPdfCommand"
            name="Search &amp;Google for PDF file">
      </command>
      <command
            id="edu.uchicago.cs.hao.texdojo.bibeditor.commands.findCommand"
            name="Find By &amp;Keyword">
      </command>
      <command
            categoryId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.category"
            id="edu.uchicago.cs.hao.texdojo.bibeditor.commands.copyEntryCommand"
            name="Copy Entry">
      </command>
      <command
            categoryId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.category"
            id="edu.uchicago.cs.hao.texdojo.bibeditor.commands.pasteEntryCommand"
            name="Paste Entry">
      </command>
      <command
            categoryId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.category"
            id="edu.uchicago.cs.hao.texdojo.bibeditor.commands.arxivEntryCommand"
            name="Add Article from ArXiv">
      </command>
      <command
            categoryId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.category"
            id="edu.uchicago.cs.hao.texdojo.bibeditor.commands.acmdlEntryCommand"
            name="Add Article from ACM DL">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="edu.uchicago.cs.hao.texdojo.bibeditor.handlers.AddEntryHandler"
            commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.addEntryCommand">
      </handler>
      <handler
            class="edu.uchicago.cs.hao.texdojo.bibeditor.handlers.RemoveEntryHandler"
            commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.removeEntryCommand">
      </handler>
      <handler
            class="edu.uchicago.cs.hao.texdojo.bibeditor.handlers.CopyCiteHandler"
            commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.copyCiteCommand">
      </handler>
      <handler
            class="edu.uchicago.cs.hao.texdojo.bibeditor.handlers.SearchPdfHandler"
            commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.searchPdfCommand">
      </handler>
      <handler
            class="edu.uchicago.cs.hao.texdojo.bibeditor.handlers.FindKeywordHandler"
            commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.findCommand">
      </handler>
      <handler
            class="edu.uchicago.cs.hao.texdojo.bibeditor.handlers.CopyEntryHandler"
            commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.copyEntryCommand">
      </handler>
      <handler
            class="edu.uchicago.cs.hao.texdojo.bibeditor.handlers.PasteEntryHandler"
            commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.pasteEntryCommand">
      </handler>
      <handler
            class="edu.uchicago.cs.hao.texdojo.bibeditor.handlers.ArxivEntryHandler"
            commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.arxivEntryCommand">
      </handler>
      <handler
            class="edu.uchicago.cs.hao.texdojo.bibeditor.handlers.ACMDLEntryHandler"
            commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.acmdlEntryCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.findCommand"
            contextId="edu.uchicago.cs.hao.texdojo.bibeditor.editorContext"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+F">
      </key>
      <key
            commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.removeEntryCommand"
            contextId="edu.uchicago.cs.hao.texdojo.bibeditor.editorContext"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="DEL">
      </key>
      <key
            commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.copyCiteCommand"
            contextId="edu.uchicago.cs.hao.texdojo.bibeditor.editorContext"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+C">
      </key>
      <key
            commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.searchPdfCommand"
            contextId="edu.uchicago.cs.hao.texdojo.bibeditor.editorContext"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+S">
      </key>
      <key
            commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.copyEntryCommand"
            contextId="edu.uchicago.cs.hao.texdojo.bibeditor.editorContext"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+C">
      </key>
      <key
            commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.pasteEntryCommand"
            contextId="edu.uchicago.cs.hao.texdojo.bibeditor.editorContext"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+V">
      </key>
   </extension>
