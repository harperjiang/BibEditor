<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="edu.uchicago.cs.hao.bibeditor.editors.BibEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="bib"
            icon="icons/bib_icon.png"
            id="edu.uchicago.cs.hao.bibeditor.editors.BibEditor"
            name="BibTex Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="edu.uchicago.cs.hao.bibeditor.commands.category"
            name="BibTex Editor Category">
      </category>
      <command
            categoryId="edu.uchicago.cs.hao.bibeditor.commands.category"
            id="edu.uchicago.cs.hao.bibeditor.commands.addEntryCommand"
            name="&amp;Add BibTex Entry">
      </command>
      <command
            categoryId="edu.uchicago.cs.hao.bibeditor.commands.category"
            id="edu.uchicago.cs.hao.bibeditor.commands.removeEntryCommand"
            name="&amp;Remove BibTex Entry">
      </command>
      <command
            categoryId="edu.uchicago.cs.hao.bibeditor.commands.category"
            id="edu.uchicago.cs.hao.bibeditor.commands.copyCiteCommand"
            name="&amp;Copy Cite Command">
      </command>
      <command
            categoryId="edu.uchicago.cs.hao.bibeditor.commands.category"
            id="edu.uchicago.cs.hao.bibeditor.commands.searchPdfCommand"
            name="Search &amp;Google for PDF file">
      </command>
      <command
            id="edu.uchicago.cs.hao.bibeditor.commands.findCommand"
            name="Find By &amp;Keyword">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="edu.uchicago.cs.hao.bibeditor.handlers.AddEntryHandler"
            commandId="edu.uchicago.cs.hao.bibeditor.commands.addEntryCommand">
      </handler>
      <handler
            class="edu.uchicago.cs.hao.bibeditor.handlers.RemoveEntryHandler"
            commandId="edu.uchicago.cs.hao.bibeditor.commands.removeEntryCommand">
      </handler>
      <handler
            class="edu.uchicago.cs.hao.bibeditor.handlers.CopyCiteHandler"
            commandId="edu.uchicago.cs.hao.bibeditor.commands.copyCiteCommand">
      </handler>
      <handler
            class="edu.uchicago.cs.hao.bibeditor.handlers.SearchPdfHandler"
            commandId="edu.uchicago.cs.hao.bibeditor.commands.searchPdfCommand">
      </handler>
      <handler
            class="edu.uchicago.cs.hao.bibeditor.handlers.FindKeywordHandler"
            commandId="edu.uchicago.cs.hao.bibeditor.commands.findCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="edu.uchicago.cs.hao.bibeditor.commands.findCommand"
            contextId="edu.uchicago.cs.hao.bibeditor.editorContext"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+F">
      </key>
      <key
            commandId="edu.uchicago.cs.hao.bibeditor.commands.addEntryCommand"
            contextId="edu.uchicago.cs.hao.bibeditor.editorContext"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+A">
      </key>
      <key
            commandId="edu.uchicago.cs.hao.bibeditor.commands.removeEntryCommand"
            contextId="edu.uchicago.cs.hao.bibeditor.editorContext"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="DEL">
      </key>
      <key
            commandId="edu.uchicago.cs.hao.bibeditor.commands.copyCiteCommand"
            contextId="edu.uchicago.cs.hao.bibeditor.editorContext"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+C">
      </key>
      <key
            commandId="edu.uchicago.cs.hao.bibeditor.commands.searchPdfCommand"
            contextId="edu.uchicago.cs.hao.bibeditor.editorContext"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+X">
      </key>
   </extension>
