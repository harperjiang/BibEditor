      <menuContribution
            allPopups="true"
            locationURI="popup:edu.uchicago.cs.hao.texdojo.bibeditor.editors.BibEditor?after=additions">
         <command
               commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.addEntryCommand"
               label="&amp;Add BibTex Entry"
               style="push">
         </command>
         <command
               commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.arxivEntryCommand"
               label="Add Article from ArXiv"
               style="push">
         </command>
         <command
               commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.removeEntryCommand"
               label="&amp;Remove BibTex Entry"
               style="push">
         </command>
         <command
               commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.copyCiteCommand"
               label="Copy &amp;Cite Command"
               style="push">
         </command>
         <command
               commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.searchPdfCommand"
               label="Search &amp;Google for PDF files"
               style="push">
         </command>
         <command
               commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.findCommand"
               label="Find By &amp;Keyword"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="edu.uchicago.cs.hao.texdojo.bibeditor.toolbar.main">
            <command
                  commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.searchPdfCommand"
                  icon="icons/toolbar_google.png"
                  label="Search &amp;Google for PDF files"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <reference
                        definitionId="edu.uchicago.cs.hao.texdojo.bibeditor.definitions.bibEditorActive">
                  </reference>
               </visibleWhen>
            </command>
            <command
                  commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.arxivEntryCommand"
                  icon="icons/arxiv_icon.png"
                  label="Add Article from ArXiv"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <reference
                        definitionId="edu.uchicago.cs.hao.texdojo.bibeditor.definitions.bibEditorActive">
                  </reference>
               </visibleWhen>
            </command>
            <command
                  commandId="edu.uchicago.cs.hao.texdojo.bibeditor.commands.acmdlEntryCommand"
                  icon="icons/acmdl_icon.png"
                  label="Add Article from ACM DL"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <reference
                        definitionId="edu.uchicago.cs.hao.texdojo.bibeditor.definitions.bibEditorActive">
                  </reference>
               </visibleWhen>
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   
   <extension
  point="org.eclipse.core.expressions.definitions">
  <definition
    id="edu.uchicago.cs.hao.texdojo.bibeditor.definitions.bibEditorActive">
    <with
      variable="activeEditorId">
      <equals
                        value="edu.uchicago.cs.hao.texdojo.bibeditor.editors.BibEditor">
                  </equals>
    </with>
  </definition>
</extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="edu.uchicago.cs.hao.texdojo.preferences.PreferencePage"
            class="edu.uchicago.cs.hao.texdojo.bibeditor.preferences.BibEditorPreferencePage"
            id="edu.uchicago.cs.hao.texdojo.bibeditor.preferences.BibEditorPreferencePage"
            name="BibTeX Editor">
      </page>
      <page
            class="edu.uchicago.cs.hao.texdojo.bibeditor.preferences.TeXDojoPreferencePage"
            id="edu.uchicago.cs.hao.texdojo.preferences.PreferencePage"
            name="TeXDojo">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="edu.uchicago.cs.hao.texdojo.bibeditor.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            id="edu.uchicago.cs.hao.texdojo.bibeditor.editorContext"
            name="TeXDojo BibTex Editor"
            parentId="org.eclipse.ui.contexts.window">
      </context>
   </extension>

</plugin>
